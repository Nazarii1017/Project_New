<h1><%= @field.title %></h1>

<p><%= "Location: "%><%= @field.location %></p>
<p><%= "Price per hour: " %><%= @field.price %></p>
<p><%= "Size: " %><%= @field.size %></p>
<p><%= "Field coverage: " %><%= @field.field_coverage %></p>


<ul>
  <% if current_user && current_user.admin %>
    <li><%= link_to "Edit", edit_admin_field_path(@field) %></li>
    <li><%= link_to "Destroy", admin_field_path(@field),
                    method: :delete,
                    data: { confirm: "Are you sure?" } %></li>

  <% end %>
</ul>

<%= link_to 'Back', admin_fields_path %>