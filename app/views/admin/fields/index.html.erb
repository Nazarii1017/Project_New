<h1>Fields</h1>

<table>
  <thead>
  <tr>
    <th></th>
    <th>Title</th>
    <th>Location</th>
    <th>Price</th>
    <th>Size</th>
    <th>Field Coverage</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @fields.each do |field| %>
    <tr>
      <td><%= field.title %> | </td>
      <td><%= field.location %> | </td>
      <td><%= field.price %> | </td>
      <td><%= link_to 'Show', admin_field_path(field) %></td>
      <td><%= link_to 'Edit', edit_admin_field_path(field) %></td>
      <td><%= link_to 'Destroy', admin_field_path(field), method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Field', new_admin_field_path %>