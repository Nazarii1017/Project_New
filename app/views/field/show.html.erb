<h1><%= @field.title %></h1>

<p><%= @field.location %></p>
<p><%= "Price: " %><%= number_to_currency(@field.price/100) %></p>
<p><%= "Size: " %><%= @field.size %></p>
<p><%= "Field coverage: " %><%= @field.field_coverage %></p>


<ul>
  <% if current_user && current_user.admin %>
    <li><%= link_to "Edit", edit_field_path(@field) %></li>
    <li><%= link_to "Destroy", field_path(@field),
                    method: :delete,
                    data: { confirm: "Are you sure?" } %></li>

  <% end %>
</ul>